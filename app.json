{
    "name": "urplShip Server",
    "description": "A Self hosted PurplShip cloud server.",
    "keywords": [
        "PurplShip",
        "Shipping",
        "API"
    ],
    "website": "https://purplship.com",
    "repository": "https://github.com/PurplShip/purplship-server.git",
    "logo": "https://avatars3.githubusercontent.com/u/37806986?s=400&u=d4e06b368ab2886b075b0bda96f7c7e46d15785d&v=4",
    "success_url": "/",
    "scripts": {
        "postdeploy": "echo \"from django.contrib.auth.models import User; User.objects.create_superuser('admin', 'admin@example.com', 'pass')\" | python manage.py shell"
    },
    "env": {
        "DEBUG_MODE": {
            "description": "Debug flag.",
            "value": ""
        }
    },
    "formation": {
        "web": {
            "quantity": 1,
            "size": "standard-1x"
        }
    },
    "image": "heroku/python",
    "addons": [
        {
            "plan": "heroku-postgresql"
        }
    ],
    "buildpacks": [],
    "environments": {
        "test": {
            "env": {
                "DEBUG_MODE": {
                    "description": "Debug flag.",
                    "value": "True"
                }
            },
            "addons": [
                {
                    "plan": "heroku-postgresql:hobby-dev"
                }
            ],
            "formation": {
                "web": {
                    "quantity": 1,
                    "size": "free"
                }
            }
        }
    }
}